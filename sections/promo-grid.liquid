{{ 'promo-grid-style.css' | asset_url | stylesheet_tag }}

<section class="promo-grid">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="promo-grid__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="promo-grid__top">
      {% for block in section.blocks limit: 2 %}
        <div class="promo-grid__item">
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}">
              {{ block.settings.image | image_url: width: 800 | image_tag: class: 'promo-grid__image', alt: block.settings.alt }}
            </a>
          {% else %}
            {{ block.settings.image | image_url: width: 800 | image_tag: class: 'promo-grid__image', alt: block.settings.alt }}
          {% endif %}
        </div>
      {% endfor %}
    </div>

    {% assign third = section.blocks[2] %}
    {% if third %}
      <div class="promo-grid__full">
        {% if third.settings.link != blank %}
          <a href="{{ third.settings.link }}">
            {{ third.settings.image | image_url: width: 1200 | image_tag: class: 'promo-grid__image', alt: third.settings.alt }}
          </a>
        {% else %}
          {{ third.settings.image | image_url: width: 1200 | image_tag: class: 'promo-grid__image', alt: third.settings.alt }}
        {% endif %}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Promo Grid Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Promotions"
    }
  ],
  "blocks": [
    {
      "type": "promo",
      "name": "Promo Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Promo Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Optional Link"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Alt text",
          "default": "Promo Banner"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Promo Grid",
      "blocks": [
        { "type": "promo" },
        { "type": "promo" },
        { "type": "promo" }
      ]
    }
  ]
}
{% endschema %}
