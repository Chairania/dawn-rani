<div class="faq-wrapper">
  {% for block in section.blocks %}
    <details class="faq-item">
      <summary>
        <span>{{ block.settings.question }}</span>
        <svg class="arrow" viewBox="0 0 20 20">
          <polyline points="6 8 10 12 14 8" fill="none" stroke="currentColor" stroke-width="2"/>
        </svg>
      </summary>
      <p>{{ block.settings.answer }}</p>
    </details>
  {% endfor %}
</div>

{% schema %}
{
  "name": "FAQ",
  "settings": [],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ",
      "category": "Custom"
    }
  ]
}
{% endschema %}
