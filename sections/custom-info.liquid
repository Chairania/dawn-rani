{% schema %}
{
  "name": "Custom Info Section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Judul Informasi"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Deskripsi",
      "default": "Ini adalah deskripsi informasi custom"
    },
    {
      "type": "checkbox",
      "id": "bold_text",
      "label": "Tampilkan teks tebal (bold)",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "italic_text",
      "label": "Tampilkan teks miring (italic)",
      "default": false
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Perataan teks",
      "default": "left",
      "options": [
        { "value": "left", "label": "Kiri" },
        { "value": "center", "label": "Tengah" },
        { "value": "right", "label": "Kanan" }
      ]
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Tautan tombol"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Label Tombol",
      "default": "Lihat Selengkapnya"
    }
  ],
  "presets": [
    {
      "name": "Custom Info"
    }
  ]
}
{% endschema %}

<section class="custom-info">
  <div class="page-width">
    <h2>{{ section.settings.heading }}</h2>

    {% assign text_class = "" %}
    {% if section.settings.bold_text %}
      {% assign text_class = text_class | append: " bold" %}
    {% endif %}
    {% if section.settings.italic_text %}
      {% assign text_class = text_class | append: " italic" %}
    {% endif %}
    {% assign align_class = "text-" | append: section.settings.text_align %}
    
    <p class="{{ text_class }} {{ align_class }}">{{ section.settings.text }}</p>

    {% if section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="button">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</section>

<style>
  .custom-info p.bold {
    font-weight: bold;
  }

  .custom-info p.italic {
    font-style: italic;
  }

  .custom-info p.text-left {
    text-align: left;
  }

  .custom-info p.text-center {
    text-align: center;
  }

  .custom-info p.text-right {
    text-align: right;
  }
</style>
