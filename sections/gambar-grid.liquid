{% schema %}
{
  "name": "Category Icons Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Categories"
    }
  ],
  "blocks": [
    {
      "type": "icon",
      "name": "Category Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Category Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Alt text",
          "default": "Category"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Category Icons Grid",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{{ 'gambar-grid.css' | asset_url | stylesheet_tag }}

<section class="category-icons">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="category-icons__heading">{{ section.settings.heading }}</h2>
    {% endif %}
    <div class="category-icons__grid">
      {% for block in section.blocks %}
        <div class="category-icons__item">
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}" class="category-icons__link">

                {{ block.settings.icon | image_url: width: block.settings.icon.width, height: block.settings.icon.height | image_tag: alt: block.settings.alt, class: 'category-icons__image'}}
            </a>,
          {% else %}
            <img
              src="{{ block.settings.icon | image_url: width: 600 }}"
              alt="{{ block.settings.alt }}"
              class="category-icons__image"
            >
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>
