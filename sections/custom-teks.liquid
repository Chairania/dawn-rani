<div class="custom-text-wrapper align-{{ section.settings.alignment }}">
  {% if section.settings.heading != blank %}
    <h2 class="custom-heading">{{ section.settings.heading }}</h2>
  {% endif %}

  {% if section.settings.subtext != blank %}
    <p class="custom-subtext">{{ section.settings.subtext }}</p>
  {% endif %}
</div>

{% schema %}
{
  "name": "Custom Text Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Tulis Judul Besar Di Sini"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext / Description",
      "default": "Deskripsi singkat atau teks bebas yang bisa kamu sesuaikan langsung dari editor Shopify."
    }
  ],
  "presets": [
    {
      "name": "Custom Text Section"
    }
  ]
}
{% endschema %}
